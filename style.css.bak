/* Citi Corporate Theme - Clean, Professional, Blue/White */
:root {
    /* Brand Colors */
    --citi-blue-dark: #002D72;
    /* PMS 286 - Primary Brand Color */
    --citi-blue-light: #00A3E0;
    /* PMS Process Cyan - Accent */
    --citi-gray-dark: #333333;
    /* Text Body */
    --citi-gray-medium: #63666A;
    /* Text Secondary */
    --citi-gray-light: #D9D9D6;
    /* Borders */
    --citi-bg-light: #F8F9FA;
    /* Page Background */

    /* Mapped Variables */
    --bg-primary: #FFFFFF;
    --bg-secondary: #F8F9FA;
    --bg-tertiary: #E9ECEF;

    --text-primary: #002D72;
    /* Headers are Blue */
    --text-body: #333333;
    /* Body text is Dark Gray */
    --text-secondary: #595959;

    --accent-color: #00A3E0;
    --accent-hover: #0082B3;

    --border-color: #E6E6E6;

    --card-bg: #FFFFFF;
    --card-shadow: 0 2px 8px rgba(0, 45, 114, 0.08);
    /* Subtle blue-tinted shadow */
    --card-shadow-hover: 0 8px 16px rgba(0, 45, 114, 0.12);

    --sidebar-width: 260px;
    --font-heading: 'Inter', sans-serif;
    /* Clean corporate font */
    --font-body: 'Inter', sans-serif;
    --font-mono: 'JetBrains Mono', monospace;

    /* Markdown Specific */
    --md-code-bg: #F5F7FA;
    --md-blockquote-border: #00A3E0;
}

/* Dark Mode - Optional, but typically corporate sites stay light. 
   We will keep a dark mode but make it "Midnight Blue" inspired for continuity with users who want it. */
/* Dark Mode - Pure Black Theme */
[data-theme="dark"] {
    --bg-primary: #050505;
    /* Sidebar: Almost Black */
    --bg-secondary: #000000;
    /* Main Content: Pure Black */
    --bg-tertiary: #1A1A1A;
    --text-primary: #FFFFFF;
    --text-body: #E0E0E0;
    --text-secondary: #A0A0A0;
    --accent-color: #00A3E0;
    --accent-hover: #33BEFF;
    --border-color: #333333;
    --card-bg: #111111;
    /* Dark Gray Cards */
    --card-shadow: 0 4px 12px rgba(255, 255, 255, 0.05);
}

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: var(--font-body);
    background-color: var(--bg-secondary);
    color: var(--text-body);
    line-height: 1.6;
    -webkit-font-smoothing: antialiased;
    overflow-x: hidden;
}

